@model Product

<div class="card" style="width: 1400px;">
  <div class="bg-faded p-1">
      <center>
        <img src="@Model?.Picture" alt="Product Picture" class="img-fluid mb-2"
             style="width: 200px; height: 200px;">
             </center>
        <h4>
            <center>
            @Model?.Name
            <span class="badge rounded-pill bg-primary text-white" style="float:inherit">
                      <small>@Model?.Price.ToString()$</small>
            </span>
            </center>
        </h4>
       </div>
    <form id="@Model?.ProductID" asp-page="/Cart" method="post">
        <input type="hidden" asp-for="ProductID" />
        <input type="hidden" name="returnUrl"
            value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
        <span class="card-text p-1">
            <center>
            @Model?.Description
            </center>
            <center>
            <button type="submit"
                    class="btn btn-success btn-sm pull-right" style="float:inherit">
                Buy Now
            </button>
            </center>
        </span>
    </form>
</div>
